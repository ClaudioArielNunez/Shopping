@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nuevo</h1>

<h4>Categoría</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken() @* ESta linea hace que [ValidateAntiForgeryToken] en el controller funcione, se aplica solo a los metodos Post *@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Category" model="Model" />

            <div class="mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary"/>
                <a asp-action="Index" class="btn btn-outline-success">Volver</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

