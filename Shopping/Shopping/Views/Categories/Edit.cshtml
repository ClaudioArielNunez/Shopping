@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>País</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" >
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id"/>

            <partial name="_Category" model="Model" />

            @* <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span> *@

            <div class="mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-warning"/>
                <a asp-action="Index" class="btn btn-outline-success">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@* scripts necesarios para la validación del lado del cliente *@
 @* usa las bibliotecas jquery-validation y jquery-validation-unobtrusive *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

