@model Shopping.Models.CityViewModel
@{
    ViewData["Title"] = "AddCity";
}


<h1>Crear </h1>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()

            @* traemos el id de country *@
            <input type="hidden" asp-for="StateId" />

            @* Incluir la vista parcial aquí y pasar el modelo *@
            <partial name="_City" model="Model">

                <div class="form-group mt-2">
                    <input type="submit" value="Crear" class="btn btn-outline-primary" />
                    <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-success">Volver a listado</a>
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
