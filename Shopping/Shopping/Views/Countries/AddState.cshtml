@model Shopping.Models.StateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nuevo</h1>

<h4>Provincia/Estado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()

           @* traemos el id de country *@
           <input type="hidden" asp-for="CountryId"/>

            @* Incluir la vista parcial aquí y pasar el modelo *@
            <partial name="_State" model="Model">

                <div class="form-group mt-2">
                    <input type="submit" value="Crear" class="btn btn-outline-primary" />
                    <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-success">Volver a listado</a>
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
