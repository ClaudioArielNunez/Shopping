@model Shopping.Data.Entities.Country

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>País</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @* Incluir el token anti-forgery *@
            @Html.AntiForgeryToken() @* ESta linea hace que [ValidateAntiForgeryToken] en el controller funcione, se aplica solo a los metodos Post *@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* importante enviar el id hidden *@
            <input type="hidden" asp-for="Id" />

            @* Incluir la vista parcial aquí y pasar el modelo *@
            <partial name="_Country" model="Model" />

            @* <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div> *@

            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">volver a listado</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
