@model Shopping.Data.Entities.State
@{
    ViewData["Title"] = "DeleteState";
}

<h1>Borrar Provincia/Departamento</h1>

<h3>¿Esta seguro de querer borrar?</h3>
<div>
    <partial name="_StateDetails" model="Model"/>
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model?.Country.Id" class="btn btn-outline-success">Volver a listado</a>
    </form>
</div>


